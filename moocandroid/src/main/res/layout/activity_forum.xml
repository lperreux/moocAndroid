<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:minHeight="100dp"
        android:background="#ffff3172">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/forumTitle"
            android:layout_gravity="center_horizontal|top"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:singleLine="false" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/forumLibMessage"
        android:singleLine="false"
        android:text="@string/forumMessage"
        android:layout_marginTop="40dp"
        android:textSize="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forumMessageValue"
        android:textSize="12dp"
        android:singleLine="false"
        android:autoText="true"
        android:layout_weight="0.13"
        android:background="#DCDCDC"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:id="@+id/forumOkBtn"
        android:layout_gravity="right"
        android:onClick="newMessage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@id/forumListMessage"
        android:layout_marginTop="30dp"
        android:background="#DCDCDC"
        android:layout_weight="0.49"
        android:textSize="10dp" />



</LinearLayout>